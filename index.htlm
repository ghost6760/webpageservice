    <style>
        /* Estilos base modernos */
        :root {
            --primary: #8A4FFF;
            --secondary: #00D4FF;
            --dark: #2D3748;
            --light: #F7FAFC;
        }

        * {
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            background: var(--light);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        /* Header */
        header {
